.container {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.dot {
    position: absolute;
    top: -10rpx;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: red;
    color: #ffffff;
    width: 34rpx;
    height: 34rpx;
    font-size: 18rpx;
}

.top-right {
    left: -24rpx;
}

.top-left {
    right: -24rpx;
}