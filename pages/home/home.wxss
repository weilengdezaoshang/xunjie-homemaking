@import "./home.skeleton.wxss";
.container {
    height: 100%;
}
.category {
    padding: 30rpx 0 30rpx 30rpx;
    background: #ffffff;
}

.category-swiper-item {
    height: 150rpx;
    width: 300rpx;
    border-radius: 20rpx;
    background-image: linear-gradient(to right, #e68d44, #eb6d59);
}

.category-name {
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    color: #fff;
}

.service-preview {
    margin-bottom: 30rpx;
}