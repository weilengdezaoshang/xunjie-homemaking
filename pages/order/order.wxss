.address {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    min-height: 160rpx;
    background-color: #fcedc1;
    padding: 30rpx 30rpx;
}

.address-info {
    margin-left: 20rpx;
}

.contact-info {
    margin-top: 10rpx;
    color: #88888888;
}

.notice-text {
    margin-left: 29rpx;
}

.service-card {
    margin-top: 30rpx;
}

.action-bar {
    position: sticky;
    bottom: 0;
    width: 100%;
    z-index: 2;
    box-sizing: border-box;
    background-color: #ffffff;
    text-align: right;
    padding: 30rpx 30rpx;


}
